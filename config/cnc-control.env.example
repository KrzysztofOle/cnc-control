# Tryb pracy projektu (SHADOW-only)
CNC_SHADOW_ENABLED=true

# Wersja schematu konfiguracji SHADOW
CNC_SHADOW_CONFIG_VERSION=1

# Katalog roboczy SHADOW (zrodlo plikow G-code)
CNC_MASTER_DIR=/var/lib/cnc-control/master

# Obrazy slotow A/B eksportowanych jako USB gadget
CNC_USB_IMG_A=/var/lib/cnc-control/cnc_usb_a.img
CNC_USB_IMG_B=/var/lib/cnc-control/cnc_usb_b.img

# Slot aktywny przy pierwszym starcie (A/B)
CNC_ACTIVE_SLOT=A

# Pliki stanu SHADOW
CNC_ACTIVE_SLOT_FILE=/var/lib/cnc-control/shadow_active_slot.state
CNC_SHADOW_STATE_FILE=/var/lib/cnc-control/shadow_state.json
CNC_SHADOW_HISTORY_FILE=/var/lib/cnc-control/shadow_history.json
CNC_SHADOW_LOCK_FILE=/var/run/cnc-shadow.lock

# Parametry rebuild SHADOW
CNC_SHADOW_SLOT_SIZE_MB=1024
CNC_SHADOW_TMP_SUFFIX=.tmp
CNC_SHADOW_DEBOUNCE_SECONDS=2
CNC_SHADOW_HISTORY_LIMIT=50
CNC_SHADOW_USB_STOP_TIMEOUT=10
CNC_SHADOW_USB_START_TIMEOUT=10

# Etykieta woluminu FAT widoczna na ho≈õcie USB (max 11 znakow)
CNC_USB_LABEL=CNC_USB

# Sciezki aplikacji i uslug
CNC_CONTROL_REPO=/home/cnc/cnc-control
CNC_WEBUI_SYSTEMD_UNIT=cnc-webui.service
CNC_WEBUI_LOG=/var/log/cnc-control/webui.log
CNC_WEBUI_LOG_SINCE="24 hours ago"

# Integracje Wi-Fi/AP
CNC_AP_ENABLED=false
CNC_AP_BLOCK_FLAG=/dev/shm/cnc-ap-blocked.flag
CNC_WIFI_SCAN_CACHE=/tmp/cnc-wifi-scan.txt

# Legacy (utrzymywane dla kompatybilnosci diagnostycznej)
CNC_USB_IMG=/var/lib/cnc-control/cnc_usb.img
CNC_USB_IMG_SIZE_MB=1024
CNC_MOUNT_POINT=/mnt/cnc_usb
CNC_UPLOAD_DIR=/var/lib/cnc-control/master
